import pygame


class Link:
    """A class to manage Link."""

    def __init__(self, ai_game):
        """Initialize Link and set his starting position."""
        self.screen = ai_game.screen
        self.screen_rect = ai_game.screen.get_rect()

        # Load the Link image and get its rect.
        self.image = pygame.image.load("images/link.bmp")
        self.rect = self.image.get_rect()

        # Start each new Link at the bottom center of the screen.
        self.rect.center = self.screen_rect.center
    

    def blitme(self):
        """Draw Link at his current location."""
        self.screen.blit(self.image, self.rect)






