import sys
import pygame
from settings import Settings
from ship import Ship
from link import Link


class AlienInvasion:
    """Overall class to manage game assets and behavior."""


    def __init__(self):
        """Initialize the game, and create game resources."""
        pygame.init()
        self.clock = pygame.time.Clock()
        self.settings = Settings()

        # set the dimensions of the screen, (1200, 800) is a tuple
        self.screen = pygame.display.set_mode((self.settings.screen_width, self.settings.screen_height))
        pygame.display.set_caption("Alien Invasion")

        self.ship = Ship(self)
        self.link = Link(self)

        # Set the background color.
        self.bg_color = (0, 0, 0)

    
    def run_game(self):
        """Start the main loop for the game."""
        while True:
            self._check_events()
            self.ship.update()
            self.link.update()
            self._update_screen()
            
            self.clock.tick(60)

    def _check_events(self):
        """Respond to keypresses and mouse events."""
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                sys.exit()
            elif event.type == pygame.KEYDOWN:
                if event.key == pygame.K_RIGHT:
                    # Move the ship to the right
                    self.ship.moving_right = True
                    self.link.moving_right = True
                elif event.key == pygame.K_LEFT:
                    # Move the ship to the left
                    self.ship.moving_left = True
                    self.link.moving_left = True
                elif event.key == pygame.K_UP:
                    # Move link up
                    self.link.moving_up = True
                elif event.key == pygame.K_DOWN:
                    # Move link down
                    self.link.moving_down = True
            elif event.type == pygame.KEYUP:
                if event.key == pygame.K_RIGHT:
                    # Stop moving the ship
                    self.ship.moving_right = False
                    self.link.moving_right = False
                elif event.key == pygame.K_LEFT:
                    # Stop moving the ship
                    self.ship.moving_left = False
                    self.link.moving_left = False
                elif event.key == pygame.K_UP:
                    # Move link up
                    self.link.moving_up = False
                elif event.key == pygame.K_DOWN:
                    # Move link down
                    self.link.moving_down = False

    
    def _update_screen(self):
        """Update images on the screen, and flip to the new screen."""
        # Redraw the screen during each pass through the loop.
        self.screen.fill(self.settings.bg_color)
        self.ship.blitme()
        self.link.blitme()

        # Make the most recently drawn screen visible.
        pygame.display.flip()

    



if __name__ == "__main__":
    # Make a game instance, and run the game.
    ai = AlienInvasion()
    ai.run_game()




